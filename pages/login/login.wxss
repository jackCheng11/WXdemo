/* pages/login/login.wxss */
.content{
  font-family: 'Courier New', Courier, monospace;
  background-color: #f5f5f5;
  height: 600px;
}
.hr{
  height: 100px;
}
.bg{
  width: 100%;
  height: 100px;
  background-color: #ffffff;
}
.item{
  display: flex;
  flex-direction: row;
  height: 50px;
  line-height: 60px;
  align-items: center;
}
.name{
  width: 20%;
  font-size: 16px;
  margin-left: 10px;
  font-weight: bold;
}
.value{
  width: 80%;
  line-height: 60px;
  margin-left: 10px;
  font-size: 16px;
}
.holder{
  color: #aeaeae;
  font-size: 16px;
}
.line{
  border: 1px solid #cccccc;
  opacity: .3;
}
.btn{
  margin-top: 20px;
  background-color: #fe4e62;
  width: 94%;
  color: #cccccc;
}