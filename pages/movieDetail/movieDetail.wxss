/* pages/movieDetail/movieDetail.wxss */
.country{
  font-family: 'Courier New', Courier, monospace;
}
.bg{
  width: 100%;
  height: 100%;
  background-color: #3f544f;
}
.movie{
  display: flex;
  flex-direction: row;
  padding-top: 10px;
}
.pic image{
  width: 130px;
  height: 150px;
}
.name{
  color: #ffffff;
}
.desc{
  font-size: 12px;
  color: #f2f2f2;
  height: 28px;
  line-height: 28px;
}
.operate{
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  padding-bottom: 10px;
}
.opr{
  width: 170px;
  height: 30px;
  border: 1px solid #f0f0f0;
  margin: 0 auto;
  text-align: center;
  line-height: 30px;
  background-color: #f0f0f0;
  border-radius: 3px;
  font-size: 13px;
}
.intro{
  font-size: 13px;
  line-height: 25px;
  margin: 10px;
}
.buy{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 40px;
  background-color: #ff4d64;
  text-align: 40px;
  font-size: 14px;
  color: #ffffff;
}